html, body, * {
    cursor: default;
}

a, select, input[type=checkbox] {
    cursor: pointer;
}

html {
    overflow-y: scroll;
}

html,
body {
    box-sizing: border-box;
    border-collapse: collapse;
    background: #f9f9f9;
    color: #000;
}

* {
    line-height: 1.4em;
}

body {
    font-family: Verdana, "Roboto Sans", Geneva, Tahoma, sans-serif;
    font-size: 10pt;
    margin: 0;
    padding: 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    letter-spacing: -1px;
    line-height: 1.2em;
}

header, nav, main, footer {
    font-size: 1rem;
    padding: 0.5rem 2rem;
}

a,
a:link,
a:active,
a:visited,
a:hover {
    border-bottom: solid 2px #146eb2;
    text-decoration: none;
    color: #146eb2;
    padding: 0;
    margin: 0 0.5rem 0.1rem 0;
}

a:hover {
    border-bottom-color: #2948c1;
    color: #2948c1;
}

nav a, nav a:link, nav a:active, nav a:visited, nav a:hover {
    border: 0;
    font-size: 1.1rem;
}

nav a.nav-button,
nav a.nav-button:link,
nav a.nav-button:active,
nav a.nav-button:visited,
nav a.nav-button:hover {
    border: solid 2px #000;
    color: #000;
    display: inline-block;
    margin: 0.2rem 0.1rem;
    padding: 0.25rem 0.5rem;
}

nav a.nav-button:hover {
    background: #000 !important;
    border-color: #000 !important;
    color: #fff !important;
}

nav hr {
    border: 0;
    height: 2px;
    background: #000;
    background: linear-gradient(to right, #555, transparent 80%);
}

h1 {
    font-size: 1.75rem;
    color: #035;
    margin: 1rem 0 0 0;
}

h2 {
    font-size: 1.75rem;
}

h3 {
    font-size: 1.5rem;
}

header h1 {
    font-weight: normal;
    font-size: 1.3rem;
    margin: 0;
}

footer {
    padding-top: 2rem;
    font-size: 0.8rem;
}

main > ul {
    background: #fff;
    display: inline-block;
    padding: 0.5rem 1rem;
    border: solid 2px #444;
}

.table-comment {
    display: block;
    font-size: 1.1rem;
}

li {
    padding: 0;
    margin: 0.5rem 0 0.5rem 1rem;
}

li a, li a:link, li a:visited, li a:active, li a:hover {
    border: 0;
}

table {
    vertical-align: middle;
    margin: 0.5rem 0 1rem 0;
    border: solid 2px #555;
    border-collapse: collapse;
    background: #fff;
}

tr:hover, tr:nth-child(even):hover {
    background: #f2f2e6;
}

th {
    vertical-align: bottom;
    padding: 0.25rem 0.75rem;
    background: #d6d6d6;
    color: #000;
    font-weight: normal;
    text-align: left;
    border-bottom: solid 1px #333;
}

td {
    padding: 0.5rem 0.75rem;
    max-width: 25rem;
    border-bottom: solid 1px #333;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

tr:nth-child(even) {
    background: #f5f5f5;
}

th, td {
    border-left: solid 1px #bbb;
}

input[type=submit], button, a.link-button {
    display: inline-block;
    vertical-align: top;
    cursor: pointer;
    font-size: 0.9rem;
    text-decoration: none;
    background: #146eb2;
    color: #fff;
    padding: 0.5rem 1rem;
    margin: 0;
    border: none;
    line-height: 1.2em;
    opacity: 0.8;
}

input[type=submit]:hover, button:hover, a.link-button:hover {
    opacity: 1;
}

th a {
    display: block;
    border: 0 !important;
    font-size: 1.1rem;
}

td a {
    text-transform: uppercase;
    border: 0 !important;
    font-weight: bold;
}

.content {
    margin: 1rem 0;
}

.danger, nav a.danger {
    color: #a95a5a;
}

.success {
    color: #477f52;
}

a.danger {
    color: #a95a5a;
    border-bottom-color: #a95a5a;
}

a.success {
    color: #477f52;
    border-bottom-color: #477f52;
}

form {
    display: inline-block;
    margin: 1rem 0;
    vertical-align: baseline;
}

form.sort-form {
    white-space: nowrap;
    margin: 1rem 0 0 0;
}

fieldset {
    border: 0;
    margin: 1.5rem 0;
    padding: 0;
}

label {
    text-transform: uppercase;
    margin-bottom: 0.25rem;
    display: block;
}

input, button {
    cursor: text;
}

input, select, textarea, fieldset .readonly-value {
    font-family: Verdana, Tahoma, Arial, sans-serif;
    font-size: 1rem;
    padding: 0.25rem 0.5rem;
    border: solid 2px #444;
}

textarea {
    overflow-y: scroll;
}

input[type=text], textarea {
    background: #fff;
}

input[type=text].input-narrow {
    width: 8rem;
}

input[type=text].readonly {
    background: #ddd;
    border-color: #ddd;
}

input[type=text].input-medium {
    width: 15rem;
}

input[type=text].input-wide, input[type=password], textarea {
    width: 40rem;
}

input[type=submit].danger, a.link-button.danger {
    background: #a95a5a !important;
    color: #fff !important;
}

input[type=submit].success, a.link-button.success {
    background: #477f52 !important;
    color: #fff !important;
}

.validation-summary-errors {
    font-size: 1.1rem;
    color: #a95a5a;
}

.validation-summary-errors ul, .validation-summary-errors li {
    list-style: none;
    margin: 0;
    padding: 0;
}

.validation-summary-errors ul {
    margin-top: 1rem;
}

.input-validation-error {
    border-color: #a95a5a;
}

.field-validation-error {
    font-size: 1.1rem;
    display: block;
    padding-top: 0.15rem;
}

fieldset .readonly-value {
    display: inline-block;
    min-width: 8rem;
    border-color: #ddd;
    background: #ddd;
}

.info {
    display: inline-block;
    font-size: 1rem;
    margin: 2rem 0 0 0;
    padding: 0.5rem 0.75rem;
    background: #eef1bc;
    color: #000;
}

td.pager {
    background: #d6d6d6;
}

td.pager span {
    display: inline-block;
    padding-right: 2rem;
}

td.pager span a {
    display: inline-block;
    margin: 0;
    padding: 0 0.25rem;
    letter-spacing: -1px;
}

.small {
    font-size: 0.8rem;
}
